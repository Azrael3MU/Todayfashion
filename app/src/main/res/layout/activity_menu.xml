                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:onClick="onClickWushu"
                            android:scaleType="centerCrop"
                            android:src="@drawable/wushu_mini" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:onClick="onClickAlpha"
                            android:scaleType="centerCrop"
                            android:src="@drawable/alpha_mini" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:onClick="onClickAdd"
                            android:scaleType="centerCrop"
                            android:src="@drawable/add_mini" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:onClick="onClickScippis"
                            android:scaleType="centerCrop"
                            android:src="@drawable/scippis_mini" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:onClick="onClickNoize"
                            android:scaleType="centerCrop"
                            android:src="@drawable/noize_mini" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:onClick="onClickGoldInk"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gold_ink_mini" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:onClick="onClickChuringa"
                            android:scaleType="centerCrop"
                            android:src="@drawable/churing_mini" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:onClick="onClickDelSol"
                            android:scaleType="centerCrop"
                            android:src="@drawable/del_sol_mini" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="412dp"
        android:layout_height="40dp"
        android:layout_marginBottom="810dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/divider_horizontal_textfield" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="181dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="810dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/iconn1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="416dp"
        android:layout_height="40dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="83.2dp"
            android:layout_height="35dp"
            android:translationX="70dp"
            android:translationY="3dp"
            app:srcCompat="@drawable/favorites" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="83.2dp"
            android:layout_height="35dp"
            android:translationX="-5dp"
            android:translationY="3dp"
            app:srcCompat="@drawable/catalog" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="83.2dp"
            android:layout_height="35dp"
            android:translationX="316dp"
            android:translationY="3dp"
            app:srcCompat="@drawable/account" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="83.2dp"
            android:layout_height="35dp"
            android:onClick="onClickMenu"
            android:translationX="155dp"
            android:translationY="3dp"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="83.2dp"
            android:layout_height="35dp"
            android:translationX="244dp"
            android:translationY="3dp"
            app:srcCompat="@drawable/basket" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>